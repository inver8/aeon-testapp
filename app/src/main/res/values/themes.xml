<resources>
   
    <style name="Base.Theme.AeonTest" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.AeonTest" parent="Base.Theme.AeonTest" />

    <style name="TestApp.Text.Body.Title" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_title</item>
    </style>

    <style name="TestApp.Text.Heading.H4" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_heading</item>
    </style>

    <style name="TestApp.Text.Heading.H6" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_heading</item>
    </style>

    <style name="TestApp.Text.Body.NormalRegular" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_body</item>
    </style>
    
    <style name="TestApp.CursorColor" parent="">
        <item name="colorControlActivated">@color/gray</item>
    </style>
    
    <style name="TestApp.Edit" parent="Widget.AppCompat.EditText">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textColor">@color/edit_text</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:theme">@style/TestApp.CursorColor</item>
        <item name="android:drawableTint">@color/edit_error_color_selector</item>
    </style>
    
    <style name="TestApp.Edit.Password" parent="TestApp.Edit">
        <item name="android:drawableStart">@drawable/ic_lock_24</item>
        <item name="android:inputType">textPassword</item>
    </style>
    
    <style name="TestApp.Edit.InputLayout" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="TestApp.Edit.PasswordInputLayout" parent="TestApp.Edit.InputLayout">
        <item name="passwordToggleTint">@color/gray</item>
        <item name="passwordToggleEnabled">true</item>
    </style>

    <style name="TestApp.Button.Borderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:minWidth">24dp</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:padding">8dp</item>
        <item name="tint">@color/image_button_tint</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
</resources>